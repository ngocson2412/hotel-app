<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Room Types</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-8 col-sm-8">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Roms</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-md-4 col-sm-4">
                            <%= form_with(model: @room_type, url: admins_room_types_path(), local: true, :class => "form-horizontal form-label-left") do |f| %>
                                <div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-3 col-sm-3">Room Type Name<span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9">
                                            <%= f.text_field :name, :class => "form-control", :placeholder => "Room Type Name" %>
                                        </div>
                                    </div>
                                </div>
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-9 col-sm-9">
                                        <button type="reset" class="btn btn-primary">Reset</button>
                                        <%= f.submit 'Add', :class => "btn btn-success" %>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                        <div class="col-md-8 col-sm-8">
                            <div class="card-box table-responsive">
                                <table class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Room Type Name</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @room_types.each do |room_type| %>
                                            <tr>
                                                <td><%= room_type.id %></td>
                                                <td><%= room_type.name %></td>
                                                <th>
                                                    <!-- Button trigger modal -->
                                                    <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#changeEditModal<%= room_type.id %>">
                                                        Edit
                                                    </button>
                                                    <!-- Modal -->
                                                    <div class="modal fade" id="changeEditModal<%= room_type.id %>" tabindex="-1" role="dialog" aria-labelledby="changePwModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog" role="document">
                                                            <%= form_with(model: room_type, url: admins_room_type_path(room_type), local: true, :class => "form-horizontal form-label-left") do |f| %>
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                    <h5 class="modal-title" id="exampleModalLabel">Edit Room Type</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <label class="control-label col-md-3 col-sm-3">Room Type Name<span class="required">*</span></label>
                                                                        <div class="col-md-9 col-sm-9">
                                                                            <%= f.text_field :name, :class => "form-control", :placeholder => "Room Type Name" %>
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                                    <%= f.submit 'Save changes', :class => "btn btn-primary" %>
                                                                    </div>
                                                                </div>
                                                            <% end %>
                                                        </div>
                                                    </div>
                                                </th>
                                            </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
