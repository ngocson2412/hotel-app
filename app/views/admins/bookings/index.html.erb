<div class="">
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Booking</h2>
                    <%= link_to "Add New", new_admins_booking_path, :class=>"btn btn-success btn-sm", :style=>"margin-left: 15px;" %>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                <input type="checkbox" id="check-all">
                                            </th>
                                            <th>ID</th>
                                            <th>Book User Name</th>
                                            <th>Hotel</th>
                                            <th>Check In</th>
                                            <th>Check Out</th>
                                            <th>Total</th>
                                            <th>Book User Number</th>
                                            <th>Status</th>
                                            <th>Memo</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @booking_list.each do |booking| %>
                                            <% if booking %>
                                                <tr>
                                                    <td>
                                                        <input type="checkbox" id="check-all">
                                                    </td>
                                                    <td><%= booking.id %></td>
                                                    <td><%= link_to booking.book_user_name + " - Phone : " + booking.book_user_phone, edit_admins_booking_path(booking) %></td>
                                                    <td style="width: 200px;">
                                                        <% booking.rooms.each do |room| %>
                                                            <%= link_to room.hotel.name + " - Phone : " + room.code, admins_hotel_path(room.hotel) %><br>
                                                        <% end %>
                                                    </td>
                                                    <td><%= booking.check_in_day %></td>
                                                    <td><%= booking.check_out_day %></td>
                                                    <td><%= booking.book_total_amount %></td>
                                                    <td><%= booking.book_people_number %></td>
                                                    <td><%= booking.book_status %></td>
                                                    <td><%= booking.book_memo %></td>
                                                </tr>
                                            <% end %>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
