<form class="form-horizontal form-label-left">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3><%= @hotel.name %></h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Information</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p>User name: <%= @hotel.admin.name %> - User Phone: <%= @hotel.admin.phone %></p>
                        <p>Hotel Phone: <%= @hotel.phone %></p>
                        <p>Address: <%= @hotel.city %> <%= @hotel.addr_1 %> <%= @hotel.addr_2 %></p>
                        <p>Public: 
                            <% if @hotel.public %>
                                <strong style = "color: green; font-size: 15px;">Yes</strong>
                            <% else %>
                                <strong style = "color: red; font-size: 15px;">No</strong>
                            <% end %>
                        </p>
                        <p>Status: <strong style="color: red; font-size: 15px;">Full</strong></p>
                        <p>Description:</p>
                        <p style = "white-space: pre-line"><%= @hotel.desc_s %></p>
                        <div class="row">
                            <%= link_to "Edit Hotel", edit_admins_hotel_path(@hotel), :class => "btn btn-success btn-sm", :style => "margin-left: 15px;" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Roms</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-md-4 col-sm-4">
                                <form class="form-horizontal form-label-left">
                                    <div>
                                        <div class="form-group row">
                                            <label class="control-label col-md-3 col-sm-3">Room Id<span class="required">*</span></label>
                                            <div class="col-md-9 col-sm-9">
                                                <input type="text" class="form-control" placeholder="Room Id">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="control-label col-md-3 col-sm-3">Room Type<span class="required">*</span></label>
                                            <div class="col-md-9 col-sm-9 ">
                                                <select class="form-control">
                                                    <option>Choose Room Type</option>
                                                    <option>single room</option>
                                                    <option>double room</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="control-label col-md-3 col-sm-3">Price<span class="required">*</span></label>
                                            <div class="col-md-9 col-sm-9">
                                                <input type="text" class="form-control" placeholder="Price">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <span class="col-md-1 col-sm-1 offset-md-10 glyphicon glyphicon-plus" aria-hidden="true" style="cursor: pointer; font-size: 24px;"></span>
                                    </div>
                                    <div class="ln_solid"></div>
                                    <div class="form-group">
                                        <div class="col-md-9 col-sm-9">
                                            <button type="button" class="btn btn-primary">Cancel</button>
                                            <button type="reset" class="btn btn-primary">Reset</button>
                                            <button type="submit" class="btn btn-success">Add</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-8 col-sm-8">
                                <div class="card-box table-responsive">
                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Room ID</th>
                                                <th>Room Price</th>
                                                <th>Room type</th>
                                                <th>Status</th>
                                                <th>Description</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>101</td>
                                                <td>100$</td>
                                                <td>single room</td>
                                                <td>Booking</td>
                                                <td>
                                                    <p>Book User name : John</p>
                                                    <p>Book User Phone : 0123456789</p>
                                                    <p>Check In Time : 2020-06-25 10h</p>
                                                    <p>Check Out Time : 2020-06-28 10h</p>
                                                    <a href="#" type="button" class="btn btn-primary btn-sm">
                                                        <i class="fa fa-edit"> </i> View Detail
                                                    </a>
                                                </td>
                                                <th><a class="btn btn-success btn-sm" href="#">Edit</a></th>
                                            </tr>
                                            <tr>
                                                <td>102</td>
                                                <td>150$</td>
                                                <td>double room</td>
                                                <td>Not Booking</td>
                                                <td></td>
                                                <th><a class="btn btn-success btn-sm" href="#">Edit</a></th>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Booking</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <h2><a class="btn btn-link" href="#">Booking History</a></h2>
                                <div class="card-box table-responsive">
                                    <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action" style="width:100%">
                                        <thead>
                                            <tr>
