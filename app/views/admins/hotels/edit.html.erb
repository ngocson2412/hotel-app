                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group row">
                                    <label class="control-label col-md-3 col-sm-3">Name<span class="required">*</span></label>
                                    <div class="col-md-9 col-sm-9">
                                        <%= f.text_field :name, :class => "form-control", :placeholder => "Name" %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3 col-sm-3">Hotel Code<span class="required">*</span></label>
                                    <div class="col-md-9 col-sm-9">
                                        <%= f.text_field :hotel_code, :class => "form-control", :placeholder => "Hotel Code" %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3 col-sm-3">Phone<span class="required">*</span></label>
                                    <div class="col-md-9 col-sm-9">
                                        <%= f.text_field :phone, :class => "form-control", :placeholder => "Phone" %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3 col-sm-3">Status</label>
                                    <div class="col-md-9 col-sm-9 ">
                                        <%= f.select(:public, [['No', false], ['Yes', true]], {}, { :class => 'form-control' }) %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3 col-sm-3 ">Short Description</label>
                                    <div class="col-md-9 col-sm-9 ">
                                        <%= f.text_area(:desc_s, rows: 2, :class => "form-control", :placeholder => "Short Description") %>
