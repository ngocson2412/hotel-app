                                    <div class="col-md-9 col-sm-9 ">
                                        <%= f.text_field :city, :class => "form-control", :placeholder => "City" %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-md-3 col-sm-3">Address 1</label>
