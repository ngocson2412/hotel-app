<div class="">
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Add New User</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <% if @admin.errors.any? %>
                    <div id="error_explanation">
                        <ul>
                            <% @admin.errors.full_messages.each do |message| %>
                            <li style = "color:red"><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                     <% end %>
                    <br />
                    <%= form_with(model: @admin, url: admins_admins_path, local: true, :class => "form-horizontal form-label-left") do |f| %>
                        <div class="form-group row ">
                            <label class="control-label col-md-3 col-sm-3">User Name<span class="required">*</span></label>
                            <div class="col-md-9 col-sm-9 ">
                                <%= f.text_field :name, :class => "form-control", :placeholder => "Name" %>
                            </div>
                        </div>
                        <div class="form-group row ">
                            <label class="control-label col-md-3 col-sm-3">Email<span class="required">*</span></label>
                            <div class="col-md-9 col-sm-9 ">
                                <%= f.text_field :email, :class => "form-control", :placeholder => "Email" %>
                            </div>
                        </div>
                        <div class="form-group row ">
                            <label class="control-label col-md-3 col-sm-3">First Name</label>
                            <div class="col-md-9 col-sm-9 ">
                                <%= f.text_field :first_name, :class => "form-control", :placeholder => "First Name" %>
                            </div>
                        </div>
                        <div class="form-group row ">
                            <label class="control-label col-md-3 col-sm-3">Last Name</label>
                            <div class="col-md-9 col-sm-9 ">
                                <%= f.text_field :last_name, :class => "form-control", :placeholder => "Last Name" %>
                            </div>
                        </div>
                        <div class="form-group row ">
                            <label class="control-label col-md-3 col-sm-3">User Number</label>
                            <div class="col-md-9 col-sm-9 ">
                                <%= f.text_field :user_number, :class => "form-control", :placeholder => "User Number" %>
                            </div>
                        </div>
                        <div class="form-group row ">
                            <label class="control-label col-md-3 col-sm-3">Phone</label>
                            <div class="col-md-9 col-sm-9 ">
                                <%= f.text_field :phone, :class => "form-control", :placeholder => "Phone" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3 col-sm-3">City</label>
                            <div class="col-md-9 col-sm-9 ">
                                <%= f.text_field :city, :class => "form-control", :placeholder => "City" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3 col-sm-3">District</label>
                            <div class="col-md-9 col-sm-9 ">
                                <%= f.text_field :addr_1, :class => "form-control", :placeholder => "District" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3 col-sm-3 ">Address
                            </label>
                            <div class="col-md-9 col-sm-9 ">
                                <%= f.text_area(:addr_2, rows: 2, :class => "form-control", :placeholder => "Address") %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3 col-sm-3 ">Description
                            </label>
                            <div class="col-md-9 col-sm-9 ">
                                <%= f.text_area(:desc, rows: 4, :class => "form-control", :placeholder => "Description") %>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-9 col-sm-9  offset-md-3">
                                <%= link_to "Cancel", admins_home_index_path, :class => "btn btn-primary" %>
                                <button type="reset" class="btn btn-primary">Reset</button>
                                <%= f.submit 'Submit', :class => "btn btn-success" %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

